generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  files     File[]
}

model File {
  id         Int      @id @default(autoincrement())
  name       String
  path       String
  uploadedAt DateTime @default(now())
  folder     Folder   @relation(fields: [folderId], references: [id])
  folderId   Int
}